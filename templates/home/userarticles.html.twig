{% extends 'base.html.twig' %}

{% block title %}Articles de
	{{email}}
{% endblock %}

{% block body %}

	<h3>Liste des articles pour :  {{email}}</h3>

	<section class="">
		<div class="container">
			<table class='table'>
				<th>Vendeur</th>
				<th>Nom article</th>
				<th>Prix article</th>
				<th>Date Mise en ligne</th>

				{% for userart in userarticles %}


					<tr>
						<td>{{ userart.vendeur }}</td><td>{{ userart.nom_article }}</td><td>{{ userart.prix_article }}</td><td>{{ userart.date_mise_en_ligne }}</td>
					</tr>
					


					{% endfor %}
				</table>
			
		</div>
	</section>
{% endblock %}
